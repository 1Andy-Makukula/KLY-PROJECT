# =============================================================================
# KithLy Global Protocol - FLIGHT BAG (.env)
# Centralized Secret Management (Phase V)
# =============================================================================
# 
# ALL services pull from this file. Never commit to version control.
# Copy to .env.local for local development.

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://kithly_user:password@localhost:5432/kithly_global
DATABASE_POOL_SIZE=10

# -----------------------------------------------------------------------------
# GOOGLE CLOUD / GEMINI AI
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash
GOOGLE_CLOUD_PROJECT=kithly-global-protocol
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# -----------------------------------------------------------------------------
# STRIPE (Payment Intake - GBP/USD)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# -----------------------------------------------------------------------------
# FLUTTERWAVE (Disbursement - ZMW Mobile Money)
# -----------------------------------------------------------------------------
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_secret_key
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_public_key
FLUTTERWAVE_WEBHOOK_SECRET=your_flutterwave_webhook_secret

# -----------------------------------------------------------------------------
# ZRA VSDC (Zambia Revenue Authority - Tax Fiscalization)
# -----------------------------------------------------------------------------
ZRA_VSDC_URL=https://vsdc.zra.org.zm
ZRA_TPIN=your_business_tpin
ZRA_BHF_ID=00  # Branch ID (00 = HQ)
ZRA_DEVICE_SERIAL=your_vsdc_serial
ZRA_API_VERSION=v2

# -----------------------------------------------------------------------------
# EXCHANGE RATES
# -----------------------------------------------------------------------------
EXCHANGE_RATE_API_KEY=your_exchangerate_api_key
FIXER_API_KEY=your_fixer_io_key

# -----------------------------------------------------------------------------
# GOOGLE MAPS (Shop Onboarding)
# -----------------------------------------------------------------------------
MAPS_API_KEY=your_google_maps_api_key
# Enable in Google Cloud Console: Places API, Maps SDK for Android, Maps SDK for iOS

# -----------------------------------------------------------------------------
# TWILIO (SMS Notifications)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# FIREBASE (Push Notifications)
# -----------------------------------------------------------------------------
FIREBASE_PROJECT_ID=kithly-global-protocol
FIREBASE_SERVER_KEY=your_firebase_server_key

# -----------------------------------------------------------------------------
# CLOUD STORAGE (Evidence Vault)
# -----------------------------------------------------------------------------
CLOUD_STORAGE_BUCKET=kithly-evidence-vault
CLOUD_STORAGE_REGION=eu-west-1

# -----------------------------------------------------------------------------
# APP CONFIGURATION
# -----------------------------------------------------------------------------
APP_ENV=development  # development, staging, production
APP_DEBUG=true
APP_SECRET_KEY=your_app_secret_for_jwt
JWT_EXPIRY_HOURS=24

# -----------------------------------------------------------------------------
# ESCROW CONFIGURATION
# -----------------------------------------------------------------------------
ESCROW_TIMEOUT_HOURS=48
VOLATILITY_BUFFER_PERCENT=1.5
KITHLY_PROTOCOL_FEE_PERCENT=3.0

# -----------------------------------------------------------------------------
# RATE LIMITS
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20
