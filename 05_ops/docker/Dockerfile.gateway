# KithLy Gateway - Python/FastAPI
FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY 03_gateway/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application
COPY 03_gateway/ .

ENV PORT=8000
EXPOSE 8000

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
